---
import { Icon } from "astro-icon/components";
// No props needed for static navbar
---

<header id="header" class="fixed-top">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-3">
    <a
      class="navbar-brand fw-bold text-uppercase"
      href="#top"
      id="navbar-brand"
    >
      Radu Avramescu
    </a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="navbar-collapse collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <a class="nav-link position-relative px-0 mx-3" href="#top">
            <span class="text-uppercase">Home</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link position-relative px-0 mx-3" href="#projects">
            <span class="text-uppercase">Projects</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link position-relative px-0 mx-3" href="#about">
            <span class="text-uppercase">About</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link position-relative px-0 mx-3" href="#contact">
            <span class="text-uppercase">Contact</span>
          </a>
        </li>
      </ul>
    </div>
  </nav>
</header>

<!-- Scroll to top button -->
<a
  href="#top"
  id="scroll-to-top"
  class="position-fixed text-secondary text-decoration-none d-flex align-items-center justify-content-center"
>
  <Icon name="mdi:chevron-up-circle" width={48} height={48} />
</a>

<style>
  .navbar-brand {
    font-size: 1.25rem;
    line-height: 1;
    color: #6c757d;
    transition: color 0.3s ease;
  }

  .navbar-brand:hover {
    color: #fff !important;
  }

  .nav-link {
    position: relative;
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .nav-link::after {
    content: "";
    position: absolute;
    width: 0;
    height: 2px;
    bottom: 0;
    left: 50%;
    background-color: #fff;
    transition: all 0.3s ease;
    transform: translateX(-50%);
  }

  .nav-link:hover::after {
    width: 100%;
  }

  .nav-link:hover {
    color: #fff !important;
  }

  #header {
    transition: transform 0.3s ease;
  }

  #header.header-hide {
    transform: translateY(-100%);
  }

  #scroll-to-top {
    bottom: 20px;
    right: 20px;
    z-index: 1000;
    opacity: 0;
    transition: all 0.3s ease;
  }

  #scroll-to-top.visible {
    opacity: 1 !important;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    // Navbar hide/show on scroll and scroll-to-top functionality
    let prevScrollPos = window.pageYOffset;
    const header = document.getElementById("header") as HTMLElement | null;
    const scrollToTopBtn = document.getElementById(
      "scroll-to-top"
    ) as HTMLElement | null;
    const navbar = document.querySelector(
      ".navbar-collapse"
    ) as HTMLElement | null;

    if (!header || !scrollToTopBtn || !navbar) {
      return;
    }

    function handleScroll() {
      const currentScrollPos = window.pageYOffset;
      const isVisible =
        prevScrollPos > currentScrollPos || currentScrollPos < 10;

      if (isVisible) {
        header!.classList.remove("header-hide");
      } else {
        header!.classList.add("header-hide");

        // Close navbar if it's open
        if (navbar!.classList.contains("show")) {
          navbar!.classList.remove("show");
        }
      }

      // Show/hide scroll to top button
      if (currentScrollPos > 100) {
        scrollToTopBtn!.classList.add("visible");
      } else {
        scrollToTopBtn!.classList.remove("visible");
      }

      prevScrollPos = currentScrollPos;
    }

    // Smooth scrolling for navbar links
    document.querySelectorAll('.nav-link[href^="#"]').forEach((link) => {
      link.addEventListener("click", (event) => {
        event.preventDefault();
        const targetId = link.getAttribute("href")?.substring(1);

        if (!targetId) {
          return;
        }

        const targetElement = document.getElementById(
          targetId === "top" ? "jumbotron" : targetId
        );

        if (targetElement) {
          targetElement.scrollIntoView({ behavior: "smooth" });
        } else {
          window.scrollTo({ top: 0, behavior: "smooth" });
        }

        // Close navbar on mobile
        if (navbar!.classList.contains("show")) {
          navbar!.classList.remove("show");
        }
      });
    });

    // Brand link scroll to top
    const navbarBrand = document.getElementById("navbar-brand");

    if (navbarBrand) {
      navbarBrand.addEventListener("click", (event) => {
        event.preventDefault();
        window.scrollTo({ top: 0, behavior: "smooth" });
      });
    }

    // Listen for scroll events
    window.addEventListener("scroll", handleScroll);
  });
</script>
