<style>
  .jumbotron-container {
    background: url("/images/jumbotron.webp");
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    color: white;
  }

  .typewriter-effect {
    margin: 0 auto 1rem auto;
  }

  @media (min-width: 1200px) {
    .typewriter-effect {
      margin: 0 auto 0.5rem;
      border-right: solid 0.1em red;
      white-space: nowrap;
      overflow: hidden;
      letter-spacing: 0.15em;
      animation:
        text-animation 2s steps(29, end) 1s 1 normal both,
        cursor-animation 600ms steps(29, end) infinite;
    }
  }

  .text-slide-up {
    opacity: 0;
    transform: translateY(20px);
    animation: slideUp 1s ease 0.5s forwards;
  }

  .btn-slide-up {
    opacity: 0;
    transform: translateY(20px);
    animation: slideUp 1s ease 0.8s forwards;
  }

  .btn-slide-up:hover .arrow-right {
    transform: rotate(90deg);
  }

  @keyframes text-animation {
    from {
      width: 0;
    }
    to {
      width: 100%;
    }
  }

  @keyframes cursor-animation {
    from {
      border-right-color: red;
    }
    to {
      border-right-color: transparent;
    }
  }

  @keyframes slideUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .social-container {
    display: flex;
    justify-content: center;
    gap: 8px;
  }

  .social-fade-in {
    opacity: 0;
    animation: slideUp 1s ease 1.2s forwards;
  }

  /* Fallback for browsers that don't support background-attachment: fixed */
  @media (max-width: 768px) {
    .jumbotron-container {
      background-attachment: scroll;
    }
  }
</style>
