---
// No props needed for static jumbotron
import { Icon } from "astro-icon/components";
---

<section id="jumbotron">
  <div
    class="jumbotron-container flex justify-center items-center min-h-screen mb-0"
  >
    <div class="container mx-auto text-center px-4">
      <div class="intro overflow-hidden">
        <h1
          class="font-bold uppercase typewriter-effect text-gray-900 code-font text-5xl lg:text-7xl xl:text-8xl tracking-wider leading-normal"
        >
          Radu Avramescu
        </h1>
        <h2
          class="text-slide-up text-gray-900 text-3xl lg:text-5xl xl:text-6xl leading-normal"
        >
          Frontend Developer
        </h2>
        <div class="flex justify-center mb-2">
          <a
            class="flex items-center whitespace-nowrap bg-gray-900 text-white text-lg mt-3 px-6 py-4 font-bold btn-slide-up no-underline rounded hover:bg-gray-800 transition-colors duration-300 tracking-widest"
            href="#projects"
            id="view-projects-btn"
          >
            <span class="uppercase">View My Projects</span>
            <svg
              class="ml-3 arrow-right transition-transform duration-300"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="currentColor"
            >
              <path
                d="M4 11v2h12l-5.5 5.5 1.42 1.42L19.84 12l-7.92-7.92L10.5 5.5 16 11H4z"
              ></path>
            </svg>
          </a>
        </div>
      </div>
      <div
        class="container py-3 text-center social-container social-fade-in gap-2"
        data-observe="true"
        data-trigger-once="true"
      >
        <a
          target="_blank"
          href="https://github.com/RaduAvramescu"
          aria-label="GitHub"
          rel="noreferrer"
          class="transition-transform duration-300 hover:scale-110"
        >
          <Icon name="mdi:github" width="48" height="48" class="text-black" />
        </a>
        <a
          target="_blank"
          href="https://www.linkedin.com/in/radu-a-4863a486/"
          aria-label="LinkedIn"
          rel="noreferrer"
          class="transition-transform duration-300 hover:scale-110"
        >
          <Icon name="mdi:linkedin" width="48" height="48" class="text-black" />
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .jumbotron-container {
    background: url("/images/jumbotron.webp");
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    color: white;
  }

  .typewriter-effect {
    margin: 0 auto 1rem auto;
  }

  @media (min-width: 1200px) {
    .typewriter-effect {
      margin: 0 auto 0.5rem;
      border-right: solid 0.1em red;
      white-space: nowrap;
      overflow: hidden;
      letter-spacing: 0.15em;
      animation:
        text-animation 2s steps(29, end) 1s 1 normal both,
        cursor-animation 600ms steps(29, end) infinite;
    }
  }

  .text-slide-up {
    opacity: 0;
    transform: translateY(20px);
    animation: slideUp 1s ease 0.5s forwards;
  }

  .btn-slide-up {
    opacity: 0;
    transform: translateY(20px);
    animation: slideUp 1s ease 0.8s forwards;
  }

  .btn-slide-up:hover .arrow-right {
    transform: rotate(90deg);
  }

  @keyframes text-animation {
    from {
      width: 0;
    }
    to {
      width: 100%;
    }
  }

  @keyframes cursor-animation {
    from {
      border-right-color: red;
    }
    to {
      border-right-color: transparent;
    }
  }

  @keyframes slideUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .social-container {
    display: flex;
    justify-content: center;
  }

  .social-fade-in {
    opacity: 0;
    animation: slideUp 1s ease 1.2s forwards;
  }

  /* Fallback for browsers that don't support background-attachment: fixed */
  @media (max-width: 768px) {
    .jumbotron-container {
      background-attachment: scroll;
    }
  }
</style>
