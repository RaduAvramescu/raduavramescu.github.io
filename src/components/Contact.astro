---
// Contact component for Astro
---

<section id="contact" class="py-20 px-5 md:py-[60px] md:px-[15px]">
  <h2
    class="text-4xl md:text-[2rem] font-bold text-center uppercase text-gray-800 mb-12 relative"
    data-observe="true"
    data-trigger-once="true"
  >
    Contact
  </h2>
  <div class="max-w-4xl mx-auto" data-observe="true" data-trigger-once="true">
    <form action="https://formspree.io/xwkrdeyq" method="POST">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="relative mb-8">
          <input
            class="form-control-custom w-full p-0 bg-transparent border-0 border-b-2 border-gray-900 focus:outline-none focus:border-green-500 h-10 peer"
            type="text"
            name="name"
            id="name"
            required
            placeholder=" "
          />
          <label
            for="name"
            class="label-custom uppercase text-lg absolute top-1 left-0 text-gray-900 transition-all duration-300 cursor-pointer hover:opacity-60 peer-focus:-translate-y-7 peer-valid:-translate-y-7 peer-[&:not(:placeholder-shown)]:-translate-y-7"
          >
            Name
          </label>
        </div>

        <div class="relative mb-8">
          <input
            class="form-control-custom w-full p-0 bg-transparent border-0 border-b-2 border-gray-900 focus:outline-none focus:border-green-500 h-10 peer"
            type="email"
            name="_replyto"
            id="email"
            required
            placeholder=" "
          />
          <label
            for="email"
            class="label-custom uppercase text-lg absolute top-1 left-0 text-gray-900 transition-all duration-300 cursor-pointer hover:opacity-60 peer-focus:-translate-y-7 peer-valid:-translate-y-7 peer-[&:not(:placeholder-shown)]:-translate-y-7"
          >
            Email
          </label>
        </div>

        <div class="relative mb-8 md:col-span-2">
          <textarea
            class="form-control-custom w-full pt-2 p-0 bg-transparent border-0 border-b-2 border-gray-900 focus:outline-none focus:border-green-500 h-10 resize-none peer"
            name="message"
            id="message"
            required
            placeholder=" "></textarea>
          <label
            for="message"
            class="label-custom uppercase text-lg absolute top-1 left-0 text-gray-900 transition-all duration-300 cursor-pointer hover:opacity-60 peer-focus:-translate-y-7 peer-valid:-translate-y-7 peer-[&:not(:placeholder-shown)]:-translate-y-7"
          >
            Message
          </label>
        </div>

        <div class="md:col-span-2 text-center">
          <button
            type="submit"
            class="bg-gray-900 text-white px-8 py-3 text-lg font-semibold border-2 border-gray-900 transition-all duration-300 hover:shadow-lg hover:bg-black hover:border-black submit-btn cursor-pointer tracking-wide rounded-lg"
          >
            <span class="uppercase">Submit</span>
          </button>
        </div>
      </div>
    </form>
  </div>
</section>

<style>
  .form-control-custom:focus,
  .form-control-custom:valid,
  .form-control-custom:not(:placeholder-shown) {
    border-bottom: 2px solid #28a745 !important;
    transition: border-bottom 0.3s ease;
  }

  .form-control-custom {
    transition: border-bottom 0.3s ease;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const form = document.querySelector("form");

    if (!form) {
      return;
    }

    const inputs = form.querySelectorAll("input, textarea");

    inputs.forEach((input) => {
      // Add focus/blur events for enhanced label behavior
      input.addEventListener("focus", () => {
        input.classList.add("focused");
      });

      input.addEventListener("blur", () => {
        input.classList.remove("focused");
      });
    });

    // Form submission feedback
    form.addEventListener("submit", () => {
      const submitBtn = form.querySelector(".submit-btn") as HTMLButtonElement;

      if (submitBtn) {
        submitBtn.innerHTML = '<span class="text-uppercase">Sending...</span>';
        submitBtn.disabled = true;
      }
    });
  });
</script>
