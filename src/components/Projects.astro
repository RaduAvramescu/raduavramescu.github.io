---
import ProjectItem from './ProjectItem.astro';
import { getCollection } from 'astro:content';

const projects = await getCollection('projects');
const sortedProjects = projects.sort((a, b) => (a.data.order || 0) - (b.data.order || 0));
---

<section id="projects" class="section-padding text-center">
  <h2 
    class="section-title fw-bold text-uppercase mb-5"
    data-observe="true"
    data-trigger-once="true"
  >
    Projects
  </h2>
  <div class="container" id="projectsContent">
    <div class="row">
      {sortedProjects.map((project, i) => (
        <ProjectItem
          data={project.data}
          delay={i * 0.1}
        />
      ))}
    </div>
  </div>
</section>

<style>
  .section-padding {
    padding: 80px 20px;
  }

  .section-title {
    font-size: 2.5rem;
    color: #333;
    margin-bottom: 3rem;
    position: relative;
  }


  /* Animation styles */
  [data-observe] {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s ease;
  }

  [data-observe].animate-in {
    opacity: 1;
    transform: translateY(0);
  }

  @media (max-width: 768px) {
    .section-padding {
      padding: 60px 15px;
    }
    
    .section-title {
      font-size: 2rem;
    }
  }
</style>