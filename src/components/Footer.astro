---
// Footer component for Astro
import { Icon } from "astro-icon/components";
---

<footer class="bg-gray-900 text-white" id="footer">
  <div class="max-w-7xl mx-auto py-12 px-4 sm:px-[15px] text-center">
    <p class="mb-6 text-gray-400 text-sm">
      &copy; 2025 Radu Avramescu. All rights reserved.
    </p>
    <div class="flex justify-center gap-2">
      <a
        target="_blank"
        href="https://github.com/RaduAvramescu"
        aria-label="GitHub"
        rel="noreferrer"
        class="text-white no-underline inline-block transition-all duration-300 hover:scale-110"
      >
        <Icon
          name="mdi:github"
          width="48"
          height="48"
          class="transition-transform duration-300 text-white"
        />
      </a>
      <a
        target="_blank"
        href="https://www.linkedin.com/in/radu-a-4863a486/"
        aria-label="LinkedIn"
        rel="noreferrer"
        class="text-white no-underline inline-block transition-all duration-300 hover:scale-110"
      >
        <Icon
          name="mdi:linkedin"
          width="48"
          height="48"
          class="transition-transform duration-300 text-white"
        />
      </a>
    </div>
  </div>
</footer>
