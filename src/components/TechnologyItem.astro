---
import { Icon } from "astro-icon/components";

export interface Props {
  techName: string;
  width?: number;
}

const { techName, width = 40 } = Astro.props;
const className = width > 50 ? "mx-4 my-2" : "m-1";

const iconMap: Record<string, string> = {
  HTML5: "devicon:html5",
  CSS3: "devicon:css3",
  JavaScript: "devicon:javascript",
  Bootstrap: "devicon:bootstrap",
  "Tailwind CSS": "devicon:tailwindcss",
  "Material-UI": "devicon:materialui",
  React: "devicon:react",
  GraphQL: "mdi:graphql",
  Git: "devicon:git",
  npm: "devicon:npm",
};

const iconName = iconMap[techName];
---

<Icon
  name={iconName}
  class={`${className} cursor-pointer transition-transform duration-300 hover:scale-120`}
  width={width}
  height={width}
  title={techName}
/>

